<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8ECEC"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#E7E0E0"
        android:weightSum="13"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/leader"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_24dp"
            >

        </ImageView>

        <TextView

            android:layout_weight="10"
            android:id="@+id/ivgg_backbton"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="    OUR LEADERS "
            android:textColor="#1B97CF"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:src="@drawable/sjjj"
        >

    </ImageView>
    <TextView
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Ebe Panitteri Martines">

    </TextView>
    <TextView
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="(IIW PRESIDENT 2021-22)">

    </TextView>


    <View
        android:layout_marginTop="5dp"
        android:background="#8A8787"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:src="@drawable/sarojkat"
        >

    </ImageView>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saroj Katiyar"
        android:textSize="17sp">

    </TextView>
    <TextView

        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="(PRESIDENT 2021-22)">

    </TextView>
    <TextView
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="(ASSOCIATION OF INNERWHEEL CLUBS IN INDIA)">

    </TextView>



    <View
        android:layout_marginTop="10dp"
        android:background="#8A8787"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </View>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/intr"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#333131"
            android:text="Introduction"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginBottom="10dp"
            android:id="@+id/mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roun"
            android:text="Message"
            android:textColor="#333131">

        </androidx.appcompat.widget.AppCompatButton>


    </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</LinearLayout>