<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F8ECEC"
    android:layout_height="match_parent"
    tools:context=".Searchdirect">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#E7E0E0"
        android:weightSum="13"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bk"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black_24dp"
            >

        </ImageView>

        <TextView

            android:id="@+id/ivgg_backbton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:text="FIND A MEMBER "
            android:textColor="#1B97CF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>


    <TextView
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/namee"
        style="@style/TBEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint= "Enter name"

        android:inputType="textCapWords" />
    <TextView
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classification /Keyword" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/clssf"
        style="@style/TBEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Search "
        android:inputType="textCapWords" />
    <TextView
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/cty"
        style="@style/TBEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Search"
        android:inputType="textCapWords" />
    <TextView
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Club" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/clu"
        style="@style/TBEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Search"
        android:inputType="textCapWords" />
    <TextView
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="District Number" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/dist"
        style="@style/TBEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        android:hint="Search District Number"
        android:inputType="number" />


    <TextView
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number" />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/mbl"
        style="@style/TBEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:hint="Search Mobile Number"
        android:inputType="number" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatButton
            android:textAlignment="center"
            android:background="#F8ECEC"
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="Search"

            android:textColor="#98C0DF"
            android:textSize="28dp"
            tools:ignore="RtlCompat" />

    </RelativeLayout>





</LinearLayout>