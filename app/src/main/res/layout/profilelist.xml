<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/propic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pro"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_person_outline_black_24dp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_add_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_store_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Khadi Gramudyog Bhavan"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_store_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" ivali West"
                    android:maxLines="2"
                    android:ellipsize="end" />
                <TextView
                    android:visibility="visible"
                    android:id="@+id/txt_mb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop No 33,"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Moivali West"
                    android:maxLines="2"
                    android:ellipsize="end" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S, diest"
                    android:maxLines="2"
                    android:ellipsize="end" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_sta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ShWest"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView

                    android:id="@+id/txt_distt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Shodi Road, Kandivali West"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_storeLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_dire"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                    tools:ignore="VectorDrawableCompat" />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>

</LinearLayout>
