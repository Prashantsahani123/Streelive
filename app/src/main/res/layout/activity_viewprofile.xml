<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8ECEC"
    android:orientation="vertical">
    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#E7E0E0"
    android:weightSum="13"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/prof"
        android:padding="10dp"
        android:visibility="visible"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_back_black_24dp"
        >

    </ImageView>

    <TextView

        android:layout_weight="10"
        android:id="@+id/ivgg_backbton"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="        Profile "
        android:textColor="#1B97CF"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

</LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView

                    android:id="@+id/ivNewProfileImage"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/profile_pic" />

                <!--android:background="@drawable/blue_border_circle"-->

                <ImageView
                    android:id="@+id/iv_imageedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="-48dp"
                    android:layout_toRightOf="@id/ivNewProfileImage"
                    android:padding="10dp"
                     />



            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvClubName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvRotaryDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <ImageView

                        android:id="@+id/ivNewCallButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="7dp"
                        android:src="@mipmap/blue_call"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivNewMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="7dp"
                        android:src="@mipmap/blue_whatsapp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivWhatsApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="7dp"
                        android:src="@mipmap/blue_message"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivNewMail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="7dp"
                        android:src="@mipmap/blue_mail"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#E3DCDC" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:background="#C5BFBF"
                android:layout_width="match_parent"
                android:layout_height="0.5dp">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/Mb"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:text="Mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:id="@+id/mobil"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:textSize="15sp">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/Em"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Email ID"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/emal"
                        android:layout_marginTop="3dp"
                        android:hint=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/AofB"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:text="Area of Business"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/clas"
                        android:layout_marginTop="3dp"
                        android:hint=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/Comp_N"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/black"
                        android:text="Company / Venture Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/comp_N"
                        android:layout_marginTop="3dp"
                        android:hint=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/websit"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:text="Website of Company"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/webs"
                        android:layout_marginTop="3dp"
                        android:hint=""
                        android:textColor="#4BA8F3"

                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/facebook"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:text="Facebook Page"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/faceblpage"
                        android:layout_marginTop="3dp"
                        android:hint=""

                        android:textColor="#4BA8F3"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/Youtube"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:text="YouTube Channel"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/Youtub"
                        android:layout_marginTop="3dp"
                        android:hint=""
                        android:textColor="#4BA8F3"

                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/BussinessBrief"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:text="Business Brief"
                        android:textColor="@color/black"
                        android:textSize="20sp">

                    </TextView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/BusinessB"
                        android:layout_marginTop="3dp"
                        android:hint=""
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <View
                        android:layout_marginTop="10dp"
                        android:background="#C5BFBF"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp">

                    </View>
                </LinearLayout>



                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/spon_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/sp"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:text="Sponsored member in home club since July 1st 2021"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/sp_str"
                        android:layout_marginTop="10dp"
                        android:hint=""
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:paddingLeft="10dp"
                        android:id="@+id/ref_str"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:hint=""
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
